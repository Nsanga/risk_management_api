server {
  listen 80;
  listen [::]:80;
  server_name api.futuriskmanagement.com;

  location /.well-known/acme-challenge/ {
    root /var/www/html;
  }

  location / {
    proxy_pass http://127.0.0.1:4500;
    proxy_http_version 1.1;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}


-------------------------------------------------------





server {
  listen 80;
  listen [::]:80;
  server_name api.futuriskmanagement.com;

  location /.well-known/acme-challenge/ {
    root /var/www/html;
  }

  location / {
    return 301 https://$host$request_uri;
  }
}

server {
  listen 443 ssl;
  listen [::]:443 ssl;
  server_name api.futuriskmanagement.com;

  ssl_certificate     /etc/letsencrypt/live/api.futuriskmanagement.com/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/api.futuriskmanagement.com/privkey.pem;

  client_max_body_size 20m;

  access_log /var/log/nginx/api.futuriskmanagement.com.access.log;
  error_log  /var/log/nginx/api.futuriskmanagement.com.error.log;

  location / {
    proxy_pass http://127.0.0.1:4500;
    proxy_http_version 1.1;

    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;

    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
  }
}







